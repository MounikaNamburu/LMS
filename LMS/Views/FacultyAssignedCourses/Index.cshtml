        </h1>
    </div>

    <div class="row">

    </div>
    <p></p>




    <p></p>




    <table style="background-color:#003147" class="table table-striped table-bordered">
        <thead class="tablen">
            <tr>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">COURSE NAME</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">NO OF LESSONS</th>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">ASSIGN DATE</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">STATUS</th>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">ADD LESSONS</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">ADD MCQ</th>
            </tr>
        </thead>
        @foreach (DataRow row in Model.Tables[0].Rows)
        {
    <tbody>

       
        <tr>

            <td class="bg-light text-dark" style="text-align: center">@row["CourseName"]</td>

            <td class="bg-light text-dark" style="text-align: center">@row["NoOfLessons"]</td>

            <td class="bg-light text-dark" style="text-align: center">@row["AssignDate"]</td>
            <td class="bg-light text-dark" style="text-align: center">@row["Status"]</td>

            <td class="bg-light text-dark" style="text-align: center">

                <a href="#" class="btn btn-info"><i class="fa fa-book"></i>@Html.ActionLink("List", "LessonList", new { FKCourseID = @row["FKCourseID"] })  </a>
            <td class="bg-light text-dark" style="text-align: center">

                <a href="#" class="btn btn-info"><i class="fa fa-book"></i>@Html.ActionLink("AddMCQ", "CourseQuizQueList", new { FKCourseID = @row["FKCourseID"] })  </a>

        </tr>
       
    </tbody>
        }
    </table>
</div>


