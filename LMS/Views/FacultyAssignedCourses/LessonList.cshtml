@using System.Data
@model DataSet
@{
    Layout = null;
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
@*<link href="~/Content/FacultyCourse.css" rel="stylesheet" />*@
<link href="~/Content/FacultyCourse.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/bf4417af40.js"></script>



<nav class="navbar bg-blue navbar-dark">
    <a class="navbar-brand font-weight-bold text-primaryn" href="~/FacultyAssignedCourses/Dashboard">
        <i>LMS </i>
    </a>
</nav>
<p></p>

<div class="container">
    <div class="bg-none text-primaryn">
        <h1 style="text-align: center; color:#003147">
            Lessons <i class="fas fa-clipboard-list"></i>
        </h1>
    </div>
    <div class="row">
        <div style="text-align: left; color:#fff" class="col-lg-3">
            <p style="color:#fff" class="btn btn-infon btn-sm-mb-3">
                @Html.ActionLink("Add New", "AddLesson")
            </p>
        </div>
    </div>
    <div class="row">

    </div>
    <p></p>
    <p></p>
    <table style="background-color:#003147" class="table table-striped table-bordered">
        <thead class="tablen">
            <tr>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">COURSE NAME</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">VIDEO LINK</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">DESCRIPTION</th>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">UPLOADED DATE</th>
                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">STATUS</th>

                <th class="text-primary1 font-weight-bold"
                    style="text-align: center">ADD LESSONS</th>
            </tr>
        </thead>
        @foreach (DataRow row in Model.Tables[0].Rows)
        {
            <tbody>


                <tr>

                    <td class="bg-light text-dark" style="text-align: center">@row["CourseName"]</td>

                    <td class="bg-light text-dark" style="text-align: center">@row["VideoLink"]</td>
                    <td class="bg-light text-dark" style="text-align: center">@row["Description"]</td>
                    <td class="bg-light text-dark" style="text-align: center">@row["UploadedDate"]</td>
                    <td class="bg-light text-dark" style="text-align: center">@row["Status"]</td>
                    @if (@row["Status"].ToString() == "Active")
                    {
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.ActionLink("Deactivate", "DeactivateLesson", new { PKCourseDetailsID = @row["PKCourseDetailsID"] })
                        </td>
                    }
                    else
                    {
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.ActionLink("Activate", "DeactivateLesson", new { PKCourseDetailsID = @row["PKCourseDetailsID"] })
                        </td>
                    }

                    @*<a href="#" class="btn btn-info"><i class="fa fa-book"></i></a>*@

                </tr>

            </tbody>
        }
    </table>

    <div class="row">
        <div style="text-align: left; color:#fff" class="col-lg-3">
            <p style="color:#fff" class="btn btn-infon btn-sm-mb-3">
                @Html.ActionLink("Back To Courses", "Index")
            </p>
        </div>
    </div>
   
    <div style="font-family:'Microsoft Sans Serif';
                      color:green;
                      font-size:22px;
                      font-weight:bold">



        @Html.ViewData["Message"]
    </div>
</div>


