<table style="background-color:#003147" class="table table-striped table-bordered">
    <thead class="tablen">
        <tr>

            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>NAME</h4> </th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>EMAILID</h4></th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>CONTACTNO</h4></th>

            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>ALTERNATE CONTACT NO</h4></th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>ADDRESS</h4></th>

            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>SKILLS</h4></th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>GENDER</h4></th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>STATUS</h4></th>
            <th class="text-primary1 font-weight-bold"
                style="text-align: center"><h4>CREATED ON</h4></th>
        </tr>
    </thead>

    @foreach (DataRow row in Model.Tables[0].Rows)
    {
        <tr>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["Name"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["EmailID"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["ContactNo"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["AlternateContactNo"]</h4></td>

            <td class="bg-light text-dark" style="text-align: center"><h4>@row["Address"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["Skills"]</h4></td>
            @*<td>@row["DOB"]</td>*@
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["Gender"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["Status"]</h4></td>
            <td class="bg-light text-dark" style="text-align: center"><h4>@row["CreatedOn"]</h4></td>

            @if (@row["Status"].ToString() == "Active")
            {
                <td class="bg-light text-dark" style="text-align: center">
                    <h4> @Html.ActionLink("Deactivate", "ChangeStatus", new { PKFacultyRegID = @row["PKFacultyRegID"] })</h4>
                </td>
            }
            else
            {
                <td class="bg-light text-dark" style="text-align: center">
                    <h4> @Html.ActionLink("Activate", "ChangeStatus", new { PKFacultyRegID = @row["PKFacultyRegID"] })</h4>
                </td>
            }

        </tr>
    }

</table>

