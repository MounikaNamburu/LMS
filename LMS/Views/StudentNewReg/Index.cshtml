@model Registration.Models.StudentRegClass

@{
    ViewBag.Title = "Index";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<link rel="stylesheet" href="~/Content/studentregister.css" />


<div style="background: #2A3456">
    <center>
        <div style="background: #c9c8ed;width: 980px;height: 100px">
            <h2 style="font-family: 'Microsoft Sans Serif';
                    font-size: 40px;
                    padding-top:25px; padding-right:10px; padding-left:10px;">
                Student Registration
            </h2>
        </div>
    </center>

    <center>
        @using (Html.BeginForm("Index", "StudentNewReg", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="background: #dfd7d7;
                                      color: black;
                                      font-family:'Times New Roman', Times, serif;
                                      font-size: 18px;
                                      width: 800px;
                                      height:950px;
                                      box-shadow: 5px 10px #1d1010;
                                      ">
                @*<h4>StudentRegClass</h4>*@
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group" style="width:850px; display:inline-flex;">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12" style="width:950px;
                                       font-family:'Microsoft Sans Serif';
                                       font-size:20px;
                                       font-weight:bold;
                                       letter-spacing:1px">
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div><br />


                <div class="form-group" style="width:850px; display:inline-flex;">
                    @Html.LabelFor(model => model.MiddleName, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12" style="width: 950px;
                                       font-family: 'Microsoft Sans Serif';
                                       font-size: 20px;
                                       font-weight: bold;
                                       letter-spacing:1px">
                        @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "text-danger" })
                    </div>
                </div><br />


                <div class="form-group" style="width:850px; display:inline-flex;">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12" style="width: 950px;
                                       font-family: 'Microsoft Sans Serif';
                                       font-size: 20px;
                                       font-weight: bold;
                                       letter-spacing:1px">
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                    </div>
                </div><br />


                <div class="form-group" style="width:850px; display:inline-flex;">
                    @Html.LabelFor(model => model.EmailID, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12" style="width: 950px;
                                       font-family: 'Microsoft Sans Serif';
                                       font-size: 20px;
                                       font-weight:bold;
                                       letter-spacing:1px">
                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                    </div>
                </div><br />


                <div class="form-group" style="width:850px; display:inline-flex;">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-12" style="width: 950px;
                                        font-family: 'Microsoft Sans Serif';
                                        font-size: 20px;
                                        font-weight:bold;
                                        letter-spacing:1px">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div><br />

                

                      <div class="form-group" style="width: 850px; display: inline-flex;">
                          @Html.LabelFor(model => model.Repwd, htmlAttributes: new { @class = "control-label col-md-5" })
                          <div class="col-md-12" style="width: 950px;
                                        font-family: 'Microsoft Sans Serif';
                                        font-size: 20px;
                                        font-weight:bold;
                                        letter-spacing:1px">
                              @Html.EditorFor(model => model.Repwd, new { htmlAttributes = new { @class = "form-control" } })
                              @Html.ValidationMessageFor(model => model.Repwd, "", new { @class = "text-danger" })

                          </div>
                       </div><br />



                          <div class="form-group" style="width:850px; display:inline-flex;">
                              @Html.LabelFor(model => model.ContactNo, htmlAttributes: new { @class = "control-label col-md-5" })
                              <div class="col-md-12" style="width: 950px;
                                       font-family: 'Microsoft Sans Serif';
                                       font-size: 20px;
                                       font-weight:bold;
                                       letter-spacing:1px">
                                  @*@Html.EditorFor(model => model.myfloatvalue, new { @type = "number", @min = "0", @step = "0.01", @value = "0" })*@
                                  @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger" })
                              </div>
                          </div><br />


                          <div class="form-group" style="width:850px; display:inline-flex;">
                              @Html.LabelFor(model => model.AlternateContactNo, htmlAttributes: new { @class = "control-label col-md-5" })
                              <div class="col-md-12" style="width: 950px;
                                       font-family: 'Microsoft Sans Serif';
                                       font-size: 20px;
                                       font-weight:bold;
                                       letter-spacing:1px">
                                  @Html.EditorFor(model => model.AlternateContactNo, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.AlternateContactNo, "", new { @class = "text-danger" })
                              </div>
                          </div><br /><br />


                          <div class="form-group" style="width:850px; display:inline-flex;">
                              @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-5" })
                              <div class="col-md-12" style="width:950px;
                                       font-family:'Microsoft Sans Serif';
                                       font-size:20px;
                                       font-weight:bold;
                                       letter-spacing:1px">
                                  @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                              </div>
                          </div><br />

                          <div class="form-group" style="width:850px; display:inline-flex;">
                              @Html.LabelFor(model => model.DOB, htmlAttributes: new { @class = "control-label col-md-5" })
                              <div class="col-md-12" style="width:950px;
                                      font-family:'Microsoft Sans Serif';
                                      font-size:20px;
                                      font-weight:bold;
                                      letter-spacing:1px">
                                  @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                              </div>
                          </div><br /><br />

                          <div class="form-group" style="width:850px; display:inline-flex;">
                              @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-5" })
                              <div class="col-md-12" style="width:950px;">
                                  @Html.Label("Male")
                                  @Html.RadioButtonFor(model => model.Gender, "M")
                                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                  @Html.Label("Female")
                                  @Html.RadioButtonFor(model => model.Gender, "F")

                                  @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                              </div>
                          </div><br /><br /><br />

                          <div class="form-group" style="display:flex;">
                              <div class="col-md-offset-2 col-md-10">
                                  <input type="submit" value="REGISTER" style="width: 550px;
                                                          font-family: 'Microsoft Sans Serif';
                                                           font-size: 20px;
                                                           background: #43c5ba;
                                                           color: White;
                                                           padding: 15px 32px;
                                                           text-align: center;
                                                           text-decoration: none;
                                                           box-shadow: 5px 10px #eac7c7;"
                                         class="btn btn-default" />
                              </div>
                          </div>






                          <div style="font-family:'Microsoft Sans Serif';
                      color:green;
                      font-size:22px;
                      font-weight:bold">
                              @Html.ViewData["Message"]
                          </div>

                      </div><br /><br /><br />



            
        }
    </center>
</div><br />



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
