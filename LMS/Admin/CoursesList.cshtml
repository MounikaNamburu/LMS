@model IEnumerable<LMS.Models.Tbl_Course>

<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>LMS</title>
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/images/Picture1.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .text-primaryn {
            color: #2A3456 !important;
        }

        .text-primary1 {
            color: #fff !important;
        }

        .tablen {
            background-color: #2A3456;
        }

        .btn-infon {
            color: #fff;
            background-color: #2A3456;
            border-color: #2A3456;
        }
    </style>
    <script src="https://kit.fontawesome.com/bf4417af40.js"></script>
</head>
<body>
    <nav class="navbar bg-blue navbar-dark">
        <a class="navbar-brand font-weight-bold text-primaryn" href="@Url.Action("Index","Admin")">
            LMS
        </a>
    </nav>


    <div class="container">
        <div class="bg-none text-primaryn">
            <h1 style="text-align: center">
                Course List <i class="fas fa-clipboard-list"></i>
            </h1>
        </div>

        <div class="row">
            <div style="text-align: left" class="col-lg-3">
                <a href="@Url.Action("Courses","Admin")" class="btn btn-infon btn-sm-mb-3">
                    Add New <i class="fas fa-user-plus"></i>
                </a>
            </div>
        </div>
        <br />
        <br />
        <table class="table table-striped table-bordered">
            <thead class="tablen">
                <tr>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">
                        @Html.DisplayNameFor(model => model.FullDescription)
                    </th>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">
                        @Html.DisplayNameFor(model => model.CourseType)
                    </th>
                    <th class="text-primary1 font-weight-bold" style="text-align: center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>

                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.DisplayFor(modelItem => item.FullDescription)
                        </td>
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.DisplayFor(modelItem => item.CourseType)
                        </td>
                        <td class="bg-light text-dark" style="text-align: center">
                            @Html.ActionLink("Edit", "Courses", new { item.PKCourseID, item.CourseName, item.FullDescription, item.Duration, item.Price, item.CourseType }) |

                            @Html.ActionLink("Delete", "Delete", new { id = item.PKCourseID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</body>
</html>

